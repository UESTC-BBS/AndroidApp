<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryBackground</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <!--no actionbar and title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- drawer back style -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.Overflow</item>

        <!--actionbar text color-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
    </style>

    <!-- popup style -->
    <style name="ToolBarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.TranslucentTheme" parent="AppTheme.NoActionBar">
    </style>

</resources>
